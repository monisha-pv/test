<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#89E0F3"
    tools:context=".CharacterSelectActivity">

    <TextView
        android:id="@+id/characterselect_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/characterselect_title_text"
        android:textColor="#000000"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.120000005" />

    <ImageView
        android:id="@+id/characterselect_deer"
        android:layout_width="220dp"
        android:layout_height="183dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/characterselect_title"
        app:srcCompat="@drawable/deer_01" />

    <ImageView
        android:id="@+id/characterselect_badger"
        android:layout_width="220dp"
        android:layout_height="183dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toStartOf="@+id/characterselect_bunny"
        app:layout_constraintStart_toEndOf="@+id/characterselect_deer"
        app:layout_constraintTop_toBottomOf="@+id/characterselect_title"
        app:srcCompat="@drawable/badger_01" />

    <ImageView
        android:id="@+id/characterselect_bunny"
        android:layout_width="220dp"
        android:layout_height="183dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/characterselect_title"
        app:srcCompat="@drawable/rabbit_01" />

    <Button
        android:id="@+id/characterselect_continuebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/continue_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/characterselect_badger" />

</androidx.constraintlayout.widget.ConstraintLayout>